#:kivy 1.11.1
#: import CheckBox kivy.uix.checkbox

<IdeasContainer>:
    id: ideas_container

<HeaderLabel@Label>:
    font_size: 25
    size_hint: 1, .15

<SmallLabel@Label>:
    font_size: 10

<IdeasButton>:
    font_size: 18
    halign: 'center'
    valign: 'center'
    shorten: True

<VirticalBox@BoxLayout>:
    orientation: 'vertical'

<HorizontalBox@BoxLayout>:
    orientation: 'horizontal'

<ImageInput@TextInput>:
    size_hint: .15, 1
    width: 50
    multiline: False

<ArtToolsScreen>:
    name: "Kyle's Art Tools"
    ArtToolsIdeasContainer:
        id: ideas_container
        cols: 3
        rows: 3
        spacing: 10
        padding: 10

        VirticalBox:
            HeaderLabel:
                text: 'Environment'
            IdeasButton:
                text: 'Generate Environment'
                on_press: self.get_environment()

        VirticalBox:
            HeaderLabel:
                text: 'Character'
            IdeasButton:
                text: 'Generate Character'
                on_press: self.get_character()

        VirticalBox:
            HeaderLabel:
                text: 'Items'
            IdeasButton:
                text: 'Generate Items'
                on_press: self.get_items()

        VirticalBox:
            HeaderLabel:
                text: 'Exercise'
            IdeasButton:
                text: 'Generate Exercise'
                on_press: self.get_exercise()

        VirticalBox:
            HeaderLabel:
                text: 'Study'
            IdeasButton:
                text: 'Generate Study'
                on_press: self.get_study()

        VirticalBox:
            HeaderLabel:
                text: 'Image Gallery'
            HorizontalBox:
                size_hint: 1, .15
                SmallLabel:
                    text: 'Time Between Images'
                ImageInput:
                    text: "1"
                    id: time_between_images
            HorizontalBox:
                size_hint: 1, .15
                SmallLabel:
                    text: 'Total Images'
                ImageInput:
                    text: "5"
                    id: total_images_to_show
            IdeasButton:
                size_hint: 1, .35
                text: 'Figure Drawing'
                on_press:
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.time_between = time_between_images.text
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.toggle_index(self.text)
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.total_images_to_dislpay = total_images_to_show.text
                    root.manager.current = 'Image Reference Viewer'
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.set_clock()
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.change_image()

            IdeasButton:
                size_hint: 1, .35
                text: 'Landscape Drawing'
                on_press:
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.time_between = time_between_images.text
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.toggle_index(self.text)
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.total_images_to_dislpay = total_images_to_show.text
                    root.manager.current = 'Image Reference Viewer'
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.set_clock()
                    root.manager.get_screen('Image Reference Viewer').ids.picture_viewer.change_image()

<PictureViewerScreen>
    time_between: 1
    name: 'Image Reference Viewer'
    PictureViewer:
        total_images_to_dislpay: 1
        id: picture_viewer
        anchor_x: 'center'
        anchor_y: 'center'

        Image:
            id: reference_image
            source: root.ids.picture_viewer.get_image_source()