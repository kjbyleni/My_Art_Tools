#:kivy 1.11.1
#: import CheckBox kivy.uix.checkbox

<IdeasContainer>:
    id: ideas_container

<HeaderLabel@Label>:
    font_size: 18
    size_hint: 1, .15
    spacing: 10

<SmallLabel@Label>:
    font_size: 10
    spacing: 10

<IdeasButton>:
    font_size: 14
    halign: 'center'
    valign: 'center'
    shorten: True

<VirticalBox@BoxLayout>:
    orientation: 'vertical'

<HorizontalBox@BoxLayout>:
    orientation: 'horizontal'

<ImageInput@TextInput>:
    size_hint: .15, 1
    width: 50
    multiline: False

<ArtToolsScreen>:
    name: "Kyle's Art Tools"
    ArtToolsIdeasContainer:
        id: ideas_container
        cols: 4
        rows: 1
        spacing: 10
        padding: 10

        VirticalBox:
            HeaderLabel:
                text: 'Environment'
            IdeasButton:
                text: 'Generate Environment'
                on_press: self.get_environment()

            HeaderLabel:
                text: 'Exercise'
            IdeasButton:
                text: 'Generate Exercise'
                on_press: self.get_exercise()


            HeaderLabel:
                text: 'Study'
            IdeasButton:
                text: 'Generate Study'
                on_press: self.get_study()

            HeaderLabel:
                text: 'Edit Lists'
            EditButton:
                text: 'Edit Lists'
                on_press: self.load_edit_screen()

        VirticalBox:
            HeaderLabel:
                text: 'Character'
            IdeasButton:
                text: 'Generate Character'
                on_press: self.get_character()

            HeaderLabel:
                text: 'Items'
            IdeasButton:
                text: 'Generate Items'
                on_press: self.get_items()

            HeaderLabel:
                text: 'Add Path'
            IdeasButton:
                text: 'Add Path For Reference'
                on_press: self.add_path()

        VirticalBox:
            VirticalBox:
                size_hint: 1, .25
                HeaderLabel:
                    text: 'Image Gallery'
                HorizontalBox:
                    padding: 10
                    SmallLabel:
                        text: 'Time Between Images'
                    ImageInput:
                        text: "1"
                        id: time_between_images
                HorizontalBox:
                    padding: 10
                    SmallLabel:
                        text: 'Total Images'
                    ImageInput:
                        text: "5"
                        id: total_images_to_show
            VirticalBox:
                id: image_box

<EditListsScreen>
    id: 'edit_lists'
    name: 'Edit Lists'


<PictureViewerScreen>
    time_between: 1
    name: 'Image Reference Viewer'
    PictureViewer:
        total_images_to_dislpay: 1
        id: picture_viewer
        anchor_x: 'center'
        anchor_y: 'center'